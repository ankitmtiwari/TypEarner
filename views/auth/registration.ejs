<!DOCTYPE html>
<!-- Coding By CodingNepal - codingnepalweb.com -->
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Registration Form</title>
    <link rel="stylesheet" href="/css/registartion.css" />
  </head>
  <body>
    <div class="container">
      <div class="registration form">
        <header>Signup</header>
        <form id="registrationForm" action="/api/v1/register" method="POST">
          <!-- {% csrf_token %} -->
          <input
            type="text"
            id="firstName"
            placeholder="Enter your firstName"
            name="regFirstName"
            required
          />
          <input
            type="text"
            id="lastName"
            placeholder="Enter your lastName"
            name="regLastName"
            required
          />
          <input
            type="email"
            id="regEmail"
            placeholder="Enter your email"
            name="regEmail"
            required
          />
          <input
            type="tel"
            id="regPhone"
            placeholder="Enter your Phone number"
            name="regPhone"
            pattern="[0-9]{10}"
            required
          />
          <input
            type="password"
            id="regPassword"
            placeholder="Create a password"
            name="regPassword"
            required
          />
          <input
            type="password"
            id="regConfirmPassword"
            placeholder="Confirm your password"
            name="regConfirmPassword"
            required
          />
          <span id="passwordMatch" class="error-message" style="display: none"
            >Password and Confirm Password don't match</span
          >
          <span id="emailCorrect" class="error-message" style="display: none"
            >Please Enter Valid Email</span
          >
          <% if (typeof success !== 'undefined' && success !== null) { %>
            <% if (success) { %>
              <h3><%= message %></h3>
            <% } else { %>
              <h3>Error: <%= message %></h3>
            <% } %>
          <% } %>

         
          <input type="submit" class="button" value="Signup" />
        </form>
        <div class="signup">
          <span class="signup"
            >Already have an account?
            <a href="/api/v1/login"> <label>Login</label></a>
          </span>
        </div>
      </div>
    </div>
  </body>
</html>
